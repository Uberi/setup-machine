// Place your settings in this file to overwrite the default settings
{
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.mouseWheelZoom": true,
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": false,
    "editor.renderIndentGuides": true,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 3,
    "window.newWindowDimensions": "maximized",
    "debug.inlineValues": true,
    "bracket-pair-colorizer-2.forceIterationColorCycle": true,
    "bracket-pair-colorizer-2.forceUniqueOpeningColor": true,
    "bracket-pair-colorizer-2.highlightActiveScope": true,
    "bracket-pair-colorizer-2.showBracketsInGutter": true,
    "bookmarks.navigateThroughAllFiles": true,
    "bookmarks.saveBookmarksInProject": true,
    "files.hotExit": "onExitAndWindowClose",
    "editor.find.seedSearchStringFromSelection": false, // don't change the Find query to the current selection

    "keyboard.dispatch": "keyCode", // make keyboard shortcuts play nice with keyboard layouts where CapsLock and Esc are swapped (like when it's changed in GNOME Tweak)

    // disable all Microsoft online and telemetry functionality
    // note: find out which online services are being used by searching for `@tag:usesOnlineServices` in the settings page
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "workbench.enableExperiments": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "update.showReleaseNotes": false,
    "extensions.autoCheckUpdates": false,
    "json.schemaDownload.enable": false,
    "npm.fetchOnlinePackageInfo": false,

    // disable updates (instead, VSCode updated by package manager, extensions updated manually)
    "update.mode": "none",
    "extensions.autoUpdate": false,

    // vim-related settings
    "vim.overrideCopy": false,
    "vim.easymotion": true,
    "vim.insertModeKeyBindings": [
        {"before": ["<home>"], "after": ["<Esc>", "I"]},
        {"before": ["<end>"], "after": ["<Esc>", "A"]}
    ],
    "vim.handleKeys":{
        "<C-w>": false, "<C-t>": false, "<C-y>": false, "<C-o>": false, "<C-a>": false,
        "<C-s>": false, "<C-f>": false, "<C-k>": false, "<C-z>": false, "<C-x>": false,
        "<C-c>": false, "<C-v>": false, "<C-n>": false
    },
    "vim.useSystemClipboard": true,
    "vim.startInInsertMode": false,

    "javascript.updateImportsOnFileMove.enabled": "always",
    "files.exclude": {
        "**/__pycache__": true,
        "**/node_modules": true,
        "**/venv": true
    },
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--ignore=E501,E402"
    ],
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--ignore-missing-imports"
    ],
    "python.linting.pylintEnabled": false,
    "python.pythonPath": "/usr/bin/python3",
    "extensions.ignoreRecommendations": true,
    "go.useGoProxyToCheckForToolUpdates": false,
    "go.formatTool": "gofmt",
    "go.autocompleteUnimportedPackages": true,
    "python.experiments.enabled": false,
    "python.showStartPage": false,
    "python.languageServer": "Pylance",
    "settingsSync.keybindingsPerPlatform": false,
    "typescript.disableAutomaticTypeAcquisition": true,
    "python.analysis.typeCheckingMode": "basic",
}